<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="activity.MainActivity" >

    <include
        android:id="@+id/head_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/main_tool" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/linerL" />

        <LinearLayout
            android:id="@+id/linerL"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:drawableTop="@drawable/home"
                android:gravity="center"
                android:text="首页"
                android:textColor="#82858b"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/record_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:drawableTop="@drawable/record"
                android:gravity="center"
                android:text="记录"
                android:textColor="#82858b"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/analyze_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:drawableTop="@drawable/analyze"
                android:gravity="center"
                android:text="分析"
                android:textColor="#82858b"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/myself_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:drawableTop="@drawable/myself"
                android:gravity="center"
                android:text="我的"
                android:textColor="#82858b"
                android:textSize="18sp" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>